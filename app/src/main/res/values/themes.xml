<resources xmlns:tools="http://schemas.android.com/tools">
   
    <style name="Theme.ExchangeRate" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>    
    </style>
    <style name="BaseToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/BaseToolbarTheme</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
   </style>
    <style name="BaseToolbarTheme">
        <item name="android:textColorPrimary">@color/toolbarTextPrimary</item>
        <item name="android:textColorSecondary">@color/toolbarTextSecondary</item>
    </style>
    <style parent="TextAppearance.Widget.AppCompat.Toolbar.Title" name="CustomTitleTextAppearance">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/toolbarTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
